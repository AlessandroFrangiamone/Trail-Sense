<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    tools:context=".ui.BarometerFragment">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/altitude_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/altitude"
        app:layout_constraintEnd_toEndOf="@+id/altitude"
        app:layout_constraintStart_toStartOf="@+id/altitude" />

    <TextView
        android:id="@+id/altitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="100 m" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/altitude_chart"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/altitude">

    </com.github.mikephil.charting.charts.LineChart>

    <TextView
        android:id="@+id/altitude_chart_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/altitude_chart_title"
        app:layout_constraintBottom_toTopOf="@+id/altitude_chart"
        app:layout_constraintEnd_toEndOf="@+id/altitude_chart"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/altitude_chart_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/altitude_chart"
        app:layout_constraintStart_toStartOf="@+id/altitude_chart"
        app:layout_constraintTop_toBottomOf="@+id/altitude_chart"
        tools:text="48 Hours" />

</androidx.constraintlayout.widget.ConstraintLayout>