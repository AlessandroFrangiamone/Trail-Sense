<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/qr_camera_holder"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_rectangle"
        android:elevation="8dp">

        <androidx.camera.view.PreviewView
            android:id="@+id/qr_scan"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/qr_torch_state"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="8dp"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="@id/qr_scan"
            app:layout_constraintTop_toTopOf="@id/qr_scan"
            app:srcCompat="@drawable/ic_torch_off"
            app:tint="@color/white" />

        <SeekBar
            android:id="@+id/qr_zoom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="0"
            app:layout_constraintBottom_toBottomOf="@id/qr_scan"
            app:layout_constraintEnd_toEndOf="@id/qr_scan"
            app:layout_constraintStart_toStartOf="@id/qr_scan" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="?android:colorBackgroundFloating"
        android:elevation="4dp"
        android:hint="@string/no_qr_code_found"
        android:lineSpacingMultiplier="1.5"
        android:padding="16dp"
        android:scrollbars="vertical"
        android:textIsSelectable="true"
        android:textSize="16sp" />

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:alignItems="center"
        app:flexDirection="row"
        app:justifyContent="space_evenly">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/qr_copy"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_copy"
            app:tint="?android:textColorSecondary" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/qr_save_note"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_tool_notes"
            app:tint="?android:textColorSecondary" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/qr_web"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_link"
            app:tint="?android:textColorSecondary"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/qr_location"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_location"
            app:tint="?android:textColorSecondary"
            tools:visibility="visible" />

    </com.google.android.flexbox.FlexboxLayout>

</LinearLayout>