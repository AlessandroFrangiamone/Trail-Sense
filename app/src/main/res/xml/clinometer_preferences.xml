<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:singleLineTitle="false"
        app:title="@string/clinometer_title">
        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="@string/pref_clinometer_restrict_valid"
            android:title="@string/pref_clinometer_restrict_valid_title"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false" />
        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="@string/pref_clinometer_lock_with_volume_buttons"
            android:title="@string/pref_clinometer_lock_with_volume_buttons_title"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false" />
        <Preference
            app:iconSpaceReserved="false"
            app:key="@string/pref_clinometer_baseline_distance_holder"
            app:singleLineTitle="false"
            app:title="@string/pref_clinometer_baseline_distance_title" />

    </PreferenceCategory>

</PreferenceScreen>
