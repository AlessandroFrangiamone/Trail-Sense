<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:singleLineTitle="false"
        app:title="@string/augmented_reality">

        <Preference
            app:iconSpaceReserved="false"
            app:key="@string/pref_view_distance_beacons_holder"
            app:singleLineTitle="false"
            app:title="@string/view_distance" />

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:iconSpaceReserved="false"
            app:key="@string/pref_show_ar_path_layer"
            app:singleLineTitle="false"
            app:title="@string/paths" />

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:iconSpaceReserved="false"
            app:key="@string/pref_ar_use_geographic_path_points"
            app:singleLineTitle="false"
            app:title="Use geographic path points (Testing)" />

        <Preference
            app:iconSpaceReserved="false"
            app:key="@string/pref_view_distance_paths_holder"
            app:singleLineTitle="false"
            app:title="@string/paths" />

    </PreferenceCategory>


</PreferenceScreen>
