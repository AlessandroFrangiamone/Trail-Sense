<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:singleLineTitle="false"
        app:title="@string/maps">

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:iconSpaceReserved="false"
            app:key="@string/pref_low_resolution_maps"
            app:singleLineTitle="false"
            app:title="@string/reduce_map_resolution" />

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:iconSpaceReserved="false"
            app:key="@string/pref_show_map_previews"
            app:singleLineTitle="false"
            app:title="@string/pref_show_map_previews_title" />


    </PreferenceCategory>
</PreferenceScreen>